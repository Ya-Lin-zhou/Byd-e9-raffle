  <script>
    // Countdown Timer
    const countdown = document.getElementById("countdown");
    const endDate = new Date("December 31, 2025 23:59:59").getTime();
    setInterval(() => {
      const now = new Date().getTime();
      const distance = endDate - now;
      if (distance <= 0) {
        countdown.innerHTML = "🎉 Raffle Closed!";
        return;
      }
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);
      countdown.innerHTML = `⏳ Time Left: ${days}d ${hours}h ${minutes}m ${seconds}s`;
    }, 1000);

    // Ticket Counter (you can manually adjust the number here)
    let ticketsLeft = 1250;
    const ticketsDisplay = document.getElementById("tickets");
    setInterval(() => {
      // This just animates fake sales for demo — you can remove or adjust this
      if (ticketsLeft > 0 && Math.random() < 0.01) {
        ticketsLeft--;
        ticketsDisplay.textContent = "Tickets Remaining: " + ticketsLeft.toLocaleString();
      }
    }, 2000);
  </script>
